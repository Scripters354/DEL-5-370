@model IEnumerable<THe_BOok_MArket.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout12.cshtml";
}


<!--Page Header Title-->
<header class="page-header">
    <div class="container-fluid">
        <h2 class="no-margin-bottom">Search Customer</h2>
    </div>
</header>
<!--Page Breadcrumb for Active Page navigation-->
<div class="breadcrumb-holder container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Views/Home/Index.cshtml">Home</a></li>
        <li class="breadcrumb-item active">Search for Customer</li>
    </ul>
</div>

<section class="forms">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">

                    <div class="card-header d-flex align-items-center">
                        <h3 class="h4">Customer List</h3>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">

                            <p>
                                @using (Html.BeginForm("Index", "Customers", FormMethod.Get))
                                {
                                    <b>SearchBy:</b> @Html.RadioButton("searchBy", "Name", true) <text>Name</text>
                                    @Html.RadioButton("searchBy", "Phone") <text>Phone</text>
                                    @Html.RadioButton("searchBy", "Email") <text>Email</text>
                                    <br />
                                    @Html.TextBox("search") <input type="submit" value="Search" />
                                }

                            </p>

                            @using (Html.BeginForm("Index", "Help", FormMethod.Post))   /*COPY THIS TO ADD A HELP LINK*/
                            {
                                <p>
                                    <input type="hidden" name="action" value="searchCustomer" /> <!--CHANGE THIS LINE value="desiredAction"-->
                                    <button type="submit" style="background:none;border:none;text-decoration:none;cursor:pointer;color:#7985d4">help</button>
                                </p>
                            }                                                           <!--/*COPY THIS TO ADD A HELP LINK*-->

                            <p>
                                @Html.ActionLink("Create New", "Create")
                            </p>
                            <table class="table">
                                <tr>
                                    <th>
                                        Name
                                    <th>
                                        Surname
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Contact
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Customer_Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Customer_Surname)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Customer_Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Customer_Contact)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Customer_ID }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.Customer_ID }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Customer_ID })
                                        </td>
                                    </tr>
                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>





















