@model IEnumerable<THe_BOok_MArket.Models.Inventory_Supplier>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout12.cshtml";
}

<!--Page Header Title-->
<header class="page-header">
    <div class="container-fluid">
        <h2 class="no-margin-bottom">Search Invetory Supplier</h2>
    </div>
</header>
<!--Page Breadcrumb for Active Page navigation-->
<div class="breadcrumb-holder container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Views/Home/Index.cshtml">Home</a></li>
        <li class="breadcrumb-item active">Search for Inventory Supplier</li>
    </ul>
</div>

<section class="forms">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">

                    <div class="card-header d-flex align-items-center">
                        <h3 class="h4">Inventory Supplier List</h3>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">

                            <p>
                                @Html.ActionLink("Add Inventory Supplier", "Create")
                            </p>
                            <table class="table">
                                <tr>
                                    <th>
                                        Supplier Name
                                    </th>
                                    <th>
                                        Address
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                       Phone No.
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InvSupp_Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InvSupp_Address)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InvSupp_Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InvSupp_Phone)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.InvSupplier_ID }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.InvSupplier_ID }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.InvSupplier_ID })
                                        </td>
                                    </tr>
                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
