
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>The Book Market</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="robots" content="all,follow">
    <!-- Bootstrap CSS-->
    <link rel="stylesheet" href=@Url.Content("~/vendor/bootstrap/css/bootstrap.min.css")>
    @RenderSection("vendors", false)
    <!-- Font Awesome CSS-->
    <link rel="stylesheet" href=@Url.Content("~/vendor/font-awesome/css/font-awesome.min.css")>
    @RenderSection("Styles", false)
    <!-- Fontastic Custom icon font-->
    <link rel="stylesheet" href=@Url.Content("~/css/fontastic.css")>
    @RenderSection("Styles", false)
    <!-- Google fonts - Poppins -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,700">
    <!-- theme stylesheet-->
    <link rel="stylesheet" href=@Url.Content("~/css/style.default.css") id="theme-stylesheet">
    @RenderSection("Styles", false)
    <!-- Custom stylesheet - for your changes-->
    <link rel="stylesheet" href=@Url.Content("~/css/custom.css")>
