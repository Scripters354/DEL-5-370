@model THe_BOok_MArket.Models.Book_Request

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Layout12.cshtml";
}


<body>
    <!--Page Header Title-->
    <header class="page-header">
        <div class="container-fluid">
            <h2 class="no-margin-bottom">New Book Request</h2>
        </div>
    </header>

    <!--Page Breadcrumb for Active Page navigation-->
    <div class="breadcrumb-holder container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/Views/Home/Index.cshtml">Home</a></li>
            <li class="breadcrumb-item active">Add New Book Request</li>
        </ul>
    </div>

    <section class="forms">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-9">
                    <div class="card">

                        <div class="card-header d-flex align-items-center">
                            <h3 class="h4">Book Request details</h3>

                        </div>

                        <div class="card-body">
                            @using (Html.BeginForm("Index", "Help", FormMethod.Post))
                            {
                                <p>
                                    <input type="hidden" name="action" value="addBookRequest" />
                                    <button type="submit" style="background:none;border:none;text-decoration:none;cursor:pointer;color:#7985d4">help</button>
                                </p>
                            }

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">

                                    <p>
                                        @Html.ActionLink("Add Customer ?", "Create", "Customers")
                                    </p>
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Customer_ID, "Customer Name", htmlAttributes: new { @class = "control-label col-md-8" })
                                        <div class="col-md-10">
                                            @Html.DropDownList("Customer_ID", null, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Customer_ID, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Book_Title, "Book Title", htmlAttributes: new { @class = "control-label col-md-8" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.Book_Title, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Book_Title, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Book_Author, "Book Author", htmlAttributes: new { @class = "control-label col-md-8" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.Book_Author, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Book_Author, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Book_Edition, "Book Edition", htmlAttributes: new { @class = "control-label col-md-8" })
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.Book_Edition, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Book_Edition, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Save" class="btn btn-default" />
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

