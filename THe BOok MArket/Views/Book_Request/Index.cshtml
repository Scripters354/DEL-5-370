@model IEnumerable<THe_BOok_MArket.Models.Book_Request>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout12.cshtml";
}



<!--Page Header Title-->
<header class="page-header">
    <div class="container-fluid">
        <h2 class="no-margin-bottom">Search Book Request</h2>
    </div>
</header>

<!--Page Breadcrumb for Active Page navigation-->
<div class="breadcrumb-holder container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="~/Views/Home/Index.cshtml">Home</a></li>
        <li class="breadcrumb-item active">Search Book Request details</li>
    </ul>
</div>

<section class="forms">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">

                    <div class="card-header d-flex align-items-center">
                        <h3 class="h4">Book Request List</h3>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">

                            <p>
                                @using (Html.BeginForm("Index", "Book_Request", FormMethod.Get))
                                {
                                    <b>SearchBy:</b> @Html.RadioButton("searchBy", "BookTitle", true) <text>Book Title</text>
                                    @Html.RadioButton("searchBy", "BookAuthor") <text>Book Author</text>
                                    @Html.RadioButton("searchBy", "BookEdition") <text>Book Edition</text>
                                    <br />
                                    @Html.TextBox("search") <input type="submit" value="Search" />
                                }

                            </p>

                            @using (Html.BeginForm("Index", "Help", FormMethod.Post))
                            {
                                <p>
                                    <input type="hidden" name="action" value="searchBookRequest" />
                                    <button type="submit" style="background:none;border:none;text-decoration:none;cursor:pointer;color:#7985d4">help</button>
                                </p>
                            }

                            <table class="table">
                                <tr>
                                    <th>
                                        Book Title
                                    </th>
                                    <th>
                                        Book Author
                                    </th>
                                    <th>
                                        Book Edition
                                    </th>
                                    @*<th>
                    @Html.DisplayNameFor(model => model.Customer_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer_Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer_Phone)
                </th>*@
                                    <th>
                                        Customer Name
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Book_Title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Book_Author)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Book_Edition)
                                        </td>
                                        @*<td>
                        @Html.DisplayFor(modelItem => item.Customer_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer_Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer_Phone)
                    </td>*@
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Customer.Customer_Name)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Book_Request_ID }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.Book_Request_ID }) |
                                            @Html.ActionLink("Cancel", "Delete", new { id = item.Book_Request_ID })
                                        </td>
                                    </tr>
                                }

                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
























